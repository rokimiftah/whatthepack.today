{
  "compilerOptions": {
    /* Projects */
    "target": "es2020",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"]
    },
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": true,
    "verbatimModuleSyntax": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Completeness */
    "skipLibCheck": true
  },

  "include": ["src"]
}
